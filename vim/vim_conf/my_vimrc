
" colorscheme solarized
" colorscheme OceanicNext
" colorscheme hybrid_material

set number
syntax enable
set mouse=a
set ft=nasm
set nowrap

set directory=~/.vim/.swp//

" -> Save file with CMD - s
"Works in insert mode, saves and puts back in insert mode
"Works in normal mode, must press Esc first
:map <C-s> :w<kEnter>
:imap <C-s> <Esc>:w<kEnter> 

" Move between buffer
map <C-k> :bprev<CR>
map <C-l> :bnext<CR>
map <C-d> :bdelete<CR>
" Move between split
map <C-b> <C-w><C-w>
map <C-<> <C-w><C-W>

" some mistakes i made a lot like :Wq :Q ...
command W w
command Q q
command WQ wq
command Wq wq
command E e
