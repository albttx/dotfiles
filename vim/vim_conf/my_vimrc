
syntax enable
set t_Co=256
set background=dark

"colorscheme OceanicNext
"colorscheme solarized
colorscheme hybrid_material

" set the background color as iterm background
highlight Normal ctermbg=none
highlight nonText ctermbg=none

set number
set mouse=a
set nowrap

" syntax coloring for assembly
set ft=nasm

" vim .swp file are save in another directory
" set directory=~/.vim/.swp//
set noswapfile

" Ctags works with CtrlP
map <C-t> :CtrlPTag<CR>

" Move between buffer
map <C-k> :bprev<CR>
map <C-l> :bnext<CR>

if has('nvim')
	map <C-d> :bdelete!<CR>
else
	map <C-d> :Bclose!<CR>
endif

" Move between split

nnoremap <silent> <ESC>^[OA <Nop>
nnoremap <silent> <ESC>^[OB <Nop>
nnoremap <silent> <ESC>^[OD <Nop>
nnoremap <silent> <ESC>^[OC <Nop>

nnoremap <silent> <C-Right> <c-w>l
nnoremap <silent> <C-Left> <c-w>h
nnoremap <silent> <C-Up> <c-w>k
nnoremap <silent> <C-Down> <c-w>j

" Force some mistakes i always do :Wq :Q ...
command W w
command Q q
command WQ wq
command Wq wq
command E e
