
syntax enable
set t_Co=256
set background=dark

"colorscheme OceanicNext
"colorscheme solarized
colorscheme hybrid_material

" set the background color as iterm background
highlight Normal ctermbg=none
highlight nonText ctermbg=none

set number
set mouse=a
set nowrap

" syntax coloring for assembly
set ft=nasm

" vim .swp file are save in another directory
set directory=~/.vim/.swp//

" -> Save file with CMD - s
"Works in insert mode, saves and puts back in insert mode
"Works in normal mode, must press Esc first
:map <C-s> :w<kEnter>
:imap <C-s> <Esc>:w<kEnter> 

" Move between buffer
map <C-k> :bprev<CR>
map <C-l> :bnext<CR>
map <C-d> :Bclose<CR>
" Move between split
map <C-b> <C-w><C-w>
map <C-<> <C-w><C-W>

" Force some mistakes i always do :Wq :Q ...
command W w
command Q q
command WQ wq
command Wq wq
command E e
